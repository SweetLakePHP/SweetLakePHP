{% extends 'SWPFrontendBundle::layout.html.twig' %}

{% block title %}
    {% trans %}meetup.plural{% endtrans %}
{% endblock %}

{% block content %}
    <div id="wrapper">
        <div id="page-title">
            <div id="page-title-inner">
                <h2>{% trans %}meetup.plural{% endtrans %}</h2>
            </div>
        </div>

        <div class="news">
            <h2>{% trans %}meetup.upcoming{% endtrans %}</h2>
            {% for event in upcomming %}
                {% include 'SWPFrontendBundle:Meetup:p-small.html.twig' with {'meetup': event} %}
            {% else %}
                <h3>{% trans %}meetup.none-found{% endtrans %}</h3>
            {% endfor %}

            <h2>{% trans %}meetup.past{% endtrans %}</h2>
            {% for event in past %}
                {% include 'SWPFrontendBundle:Meetup:p-small.html.twig' with {'meetup': event} %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
