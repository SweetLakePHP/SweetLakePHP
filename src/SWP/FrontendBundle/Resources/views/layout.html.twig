<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- start: Meta -->
        <meta charset="utf-8" />
        <title>SweetLakePHP - {% block title %}{% endblock %}</title>
        <meta name="description" content="SweetLakePHP - User community" />
        <meta name="keywords" content="sweetlakephp" />
        <meta name="author" content="SweetLakePHP member's" />
        <!-- end: Meta -->

        <!-- start: Mobile Specific -->
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <!-- end: Mobile Specific -->

        <!-- start: Facebook Open Graph -->
        <meta property="og:title" content="" />
        <meta property="og:description" content="" />
        <meta property="og:type" content="" />
        <meta property="og:url" content="" />
        <meta property="og:image" content="" />
        <!-- end: Facebook Open Graph -->

        <!-- Javascript -->
        {% javascripts
            '@SWPFrontendBundle/Resources/public/js/jquery-1.8.2.js'
            '@SWPFrontendBundle/Resources/public/js/isotope.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.imagesloaded.js'
            '@SWPFrontendBundle/Resources/public/js/bootstrap.js'
            '@SWPFrontendBundle/Resources/public/js/flexslider.js'
            '@SWPFrontendBundle/Resources/public/js/carousel.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.cslider.js'
            '@SWPFrontendBundle/Resources/public/js/slider.js'
            '@SWPFrontendBundle/Resources/public/js/fancybox.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.placeholder.min.js'
            '@SWPFrontendBundle/Resources/public/js/excanvas.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.flot.min.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.flot.pie.min.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.flot.stack.js'
            '@SWPFrontendBundle/Resources/public/js/jquery.flot.resize.min.js'
            '@SWPFrontendBundle/Resources/public/js/twitter.js'
            '@SWPFrontendBundle/Resources/public/js/custom.js'
            '@SWPFrontendBundle/Resources/public/js/bootstrap-datepicker.js'
            '@SWPFrontendBundle/Resources/public/js/application.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}

        <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

        {% block javascripts %}{% endblock %}

        <!-- start: CSS -->
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Droid+Sans:400,700">
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Droid+Serif">
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Boogaloo">
        <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Economica:700,400italic">

        {% stylesheets
            'bundles/swpfrontend/css/bootstrap.css'
            'bundles/swpfrontend/css/bootstrap-responsive.css'
            'bundles/swpfrontend/css/style.css'
            'bundles/swpfrontend/css/parallax-slider.css'
            'bundles/swpfrontend/css/font-awesome.css'
            'bundles/swpfrontend/css/font-awesome-ie7.css'
            'bundles/swpfrontend/css/datepicker.css'
            'bundles/swpfrontend/css/layout.css'
            'bundles/swpfrontend/css/sweetlakephp.css'
        filter='cssrewrite' %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block stylesheets %}{% endblock %}

        <!--[if lt IE 9 ]>
          <link href="css/styleIE.css" rel="stylesheet">
        <![endif]-->

        <!--[if IE 9 ]>
          <link href="css/styleIE9.css" rel="stylesheet">
        <![endif]-->

        <!-- end: CSS -->

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <header>
            <div class="container">
                <div class="row">
                    <div class="logo span6">
                        <a class="brand" href="{{ url('index') }}"><img src="{{ asset('bundles/swpfrontend/img/logo.png') }}" alt="logo"></a>
                    </div>

                    <div class="social-links span6 hidden-phone">
                        <ul class="social-links">
                            <li><a href="https://twitter.com/SweetlakePHP" target="_blank"><i class="fa-icon-twitter"></i></a></li>
                            <li><a href="{{ path('contact') }}"><i class="fa-icon-envelope-alt"></i></a></li>
                            <li><a href="https://github.com/verschoof/SweetLakePHP" target="_blank"><i class="fa-icon-github"></i></a></li>
                        </ul>
                    </div>
                </div>

                <div class="row-fluid">
                    <div class="navigation">
                        <div class="navbar navbar-inverse span12">
                            <div class="navbar-inner">
                                <a class="btn btn-navbar btnOverlay" data-toggle="collapse" data-target=".nav-collapse">
                                    {% trans %}menu.singular{% endtrans %}
                                </a>
                                <div class="nav-collapse collapse">
                                    <ul class="nav">
                                         <li{% if menuIsActive('index') %} class="active"{% endif %}>
                                            <a href="{{ path('index') }}">{% trans %}menu.home{% endtrans %}</a>
                                        </li>
                                        <li{% if menuIsActive('about') %} class="active"{% endif %}>
                                            <a href="{{ path('about') }}">{% trans %}menu.about{% endtrans %}</a>
                                        </li>
                                        <li{% if menuIsActive('meetup.list') %} class="active"{% endif %}>
                                            <a href="{{ path('meetup.list') }}">{% trans %}menu.meetups{% endtrans %}</a>
                                        </li>
                                        <li{% if menuIsActive('community.tweets') %} class="active"{% endif %}>
                                            <a href="{{ path('community.tweets') }}">{% trans %}menu.community{% endtrans %}</a>
                                        </li>
                                        <li{% if menuIsActive('contact') %} class="active"{% endif %}>
                                            <a href="{{ path('contact') }}">{% trans %}menu.contact{% endtrans %}</a>
                                        </li>
                                        <li{% if menuIsActive('sponsors') %} class="active"{% endif %}>
                                            <a href="{{ path('sponsors') }}">{% trans %}menu.sponsors{% endtrans %}</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="container">
            {% for key, messages in app.session.getFlashbag.all %}
                <div class="span11 center-span alert alert-{{ key }}">
                    <button class="close" data-dismiss="alert" type="button">Ã—</button>
                    {% for message in messages %}
                        <div>{{ message | trans }}</div>
                    {% endfor %}
                </div>
            {% endfor %}

            {% block content %}{% endblock %}
        </div>

        <div class="container">
            <div id="footer">
                <div class="row-fluid">
                    <div class="span3">
                        <h3>SweetlakePHP</h3>

                        <p><i class="fa-icon-map-marker"></i> Zoetermeer/Den Haag</p>
                        <p><i class="fa-icon-phone"></i> Phone: +31 (0)85 8773879</p>
                        <p><i class="fa-icon-envelope"></i> Email: info@sweetlakephp.nl</p>
                        <p><i class="fa-icon-globe"></i> Web: sweetlakephp.nl</p>
                    </div>

                    <div class="span3">
                        <h3>{% trans %}footer.tweets{% endtrans %} <small><a id="follow-us" href="https://twitter.com/SweetlakePHP" target="_blank" title="SweetLakePHP's Twitter">{% trans %}footer.follow{% endtrans %}</a></small></h3>

                        <ul id="twitter">
                            <li>{% trans %}footer.loading{% endtrans %} ..</li>
                        </ul>

                        <div class="clear"></div>
                    </div>

                    <div class="span3">
                        <h3>{% trans %}footer.contributors{% endtrans %}</h3>
                        <div class="contributors">
                            {% for contributor in getContributors() %}
                                <a href="https://www.github.com/{{ contributor.login }}" target="_blank"><img class="img-rounded" width="48" height="48" src="{{ contributor.avatar_url }}" title="{{ contributor.login }}"></a>
                            {% else %}
                                {% trans %}footer.no-contributors{% endtrans %}
                            {% endfor %}
                        </div>
                    </div>

                    <div class="span3 sponsors">
                        <h3>{% trans %}footer.sponsors{% endtrans %} </h3>

                        <a href="{{ path('sponsors') }}"><img id="transip-logo" title="TransIP" src="{{ asset('bundles/swpfrontend/img/sponsors/transip.png') }}" /></a>
                        <a href="{{ path('sponsors') }}"><img title="O'Reilly" src="{{ asset('bundles/swpfrontend/img/sponsors/oreilly.png') }}" /></a>

                    </div>
                </div>
            </div>
        </div>
    </body>
</html>