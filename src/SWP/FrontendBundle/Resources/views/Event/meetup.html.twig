{% extends 'SWPFrontendBundle::layout.html.twig' %}

{% block title %}
    {% trans %}event.singular{% endtrans %}: {{ event.name }}
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        var disqus_shortname = 'sweetlakephp'; // required: replace example with your forum shortname

        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
{% endblock %}

{% block content %}
    <div class="meetup-show">
        <a href="{{ path('index') }}" class="btn">
            <i class="icon icon-long-arrow-left"></i>
            {% trans %}event.back{% endtrans %}
        </a>
        <h1>{{ event.name }}</h1>

        <table class="info">
            <tr>
                <td>When:</td>
                <td>{{ event.datetime.format('d-m-Y H:s') }}</td>
            </tr>
            <tr>
                <td>Where:</td>
                <td>{{ event.venue.name }}, {{ event.venue.address_1 }} {{ event.venue.city }}</td>
            </tr>
        </table>

        <p>{{ event.description | raw }}</p>

        <div id="disqus_thread"></div>
    </div>
{% endblock %}